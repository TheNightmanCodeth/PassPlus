<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textBalls"
        android:text="If you have a Pass+ pro key, enter it below: "
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"

        android:id="@+id/key"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textBalls"
        android:layout_alignLeft="@+id/textBalls"
        android:layout_alignStart="@+id/textBalls"
        android:layout_alignRight="@+id/textBalls"
        android:layout_alignEnd="@+id/textBalls" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:id="@+id/buttonSub"
        android:paddingTop="10dp"
        android:layout_below="@+id/key"
        android:layout_alignStart="@+id/key"
        android:layout_alignEnd="@+id/key"/>

</RelativeLayout>